<h3>{{title}}
    <button class="button btn-secondary" id="addButton" onclick="createSubstance()" style="margin-left: 10px;">
        Добавить
    </button>
</h3>
<div class="table-responsive">
    <table class="table table-dark">
        <thead id="thead1"></thead>
        <tbody id="tbody1"></tbody>
    </table>
</div>

<form class="decor">
    <div class="form-left-decoration"></div>
    <div class="form-right-decoration"></div>
    <div class="circle"></div>
    <div class="form-inner">
        <h3>Добавление Химического вещества</h3>
        <input id='inpNum' name="numBook" placeholder="Номенклатурынй номер" required>
        <input id='inpNameSubst' type="text" placeholder="Название вещества" required>
        <textarea id='inpRecommend' type="text" required placeholder="Рекомендации по применению" rows="3"></textarea>
        <textarea id='inpInfo' type="text" required placeholder="Информация об использовании" rows="2"></textarea>
        <input id='inpBtnAdd' type="submit" value="Добавить">
    </div>
    <button type="button" class="close " aria-label="Close">
        <span aria-hidden="true">&times;</span>
    </button>
</form>


<a href="#" onclick="return up()" id="toTopBtn"
   class="cd-top text-replace js-cd-top cd-top--is-visible cd-top--fade-out" data-abc="true">Top</a>
<script src="chemicalSubstance.js"></script>